<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet[name]">

  <br>

  <label>Choose an exisiting Owner:</label>

  <br>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if owner.pets.include?(@pet) %>><%=owner.name%></input>
  <%end%>

  <br>

  <label>and/or, create a new Owner:</label>

  <br>

  <label>Name:</label>

  <input type="text" name="owner[name]"></input>

  <br>

  <input type="submit" value="Update Pet">
</form>
